{
  "manifest_version": 3,
  "name": "JobTracker",
  "version": "0.4.15",
  "description": "Track job applications and autofill forms. 100% local, privacy-first, open source.",
  "author": "Dwayne",
  "homepage_url": "https://github.com/dsouzadwayne/jobtracker",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "JobTracker"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

